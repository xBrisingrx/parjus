<div class="modal-dialog modal-xl" role="document">
  <div class="modal-content">
    <div class="modal-header g-brd-blue g-bg-blue">
      <h5 class="modal-title text-white"><strong><%= @title_modal%></strong></h5>
      <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= link_to "<i class='fa fa-plus'></i> Registrar mesa".html_safe, new_table_path(institution_id: @institution.id), remote: true,
          class: 'btn u-btn-outline-cyan u-btn-hover-v1-2 mb-2 mr-4' %>
      <%= render( partial: 'shared/table', 
            locals: { table_id: 'tables', 
                      color: 'blue', 
                      icon: 'fa-book',
                      title: "Mesas", 
                      col_names: [ 'Nombre', 'Acciones' ] }) %>
    </div>
  </div>
</div>


<!-- Modal para eliminar table -->
<div class="modal fade" id="modal-disable-table" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Â¿ Esta seguro de dar de baja este afiliado ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: disable_table_path, id: 'form-disable-table') do |form| %>
          <%= form.hidden_field :table_id %>
          <%= form.submit 'Eliminar', class: 'btn u-btn-red g-mr-10' %>
          <button type="button" class="btn u-btn-teal g-mr-10" onclick="close_modal( 'modal-disable-table')"> Cerrar </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Fin modal eliminar table -->