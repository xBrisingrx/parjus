<h1>Afiliados</h1>
<%= link_to "<i class='fa fa-plus'></i> Registrar afiliado".html_safe, new_person_path(), remote: true, class: 'btn u-btn-outline-primary u-btn-hover-v1-2 mb-2' %>

<%= link_to "<i class='fa fa-plus'></i> Importar".html_safe, import_people_path(), remote: true, class: 'btn u-btn-outline-pink u-btn-hover-v1-2 mb-2 ml-4' %>
<%= link_to "<i class='fa fa-plus'></i> Importar".html_safe, import_neighborhood_people_path(), remote: true, class: 'btn u-btn-outline-pink u-btn-hover-v1-2 mb-2 ml-4' %>


<%= render( partial: 'shared/table', 
            locals: { table_id: 'people', 
                      color: 'blue', 
                      icon: 'fa-gear',
                      title: "Ciudades registradas", 
                      col_names: [ 'Nombre','Genero', 'Tipo DNI','Matrícula','Edad','Dirección','Barrio', 'Acciones' ] }) %>

<!-- Modal para eliminar person -->
<div class="modal fade" id="modal-disable-person" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">¿ Esta seguro de dar de baja este afiliado ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: disable_person_path, id: 'form-disable-person') do |form| %>
          <%= form.hidden_field :person_id %>
          <%= form.submit 'Eliminar', class: 'btn u-btn-red g-mr-10' %>
          <button type="button" data-dismiss="modal" class="btn u-btn-teal g-mr-10"> Cerrar </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Fin modal eliminar person -->

