<%= form_with(model: @institution, remote: true, class: 'g-brd-around g-brd-gray-light-v4 g-pa-10 g-mb-10', id: 'form-institution') do |form| %>
  <div class="form-group row g-mb-10">
    <%= form.label :name, 'Nombre (*):', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :name, class: "form-control u-form-control", placeholder: 'Ingrese nombre' ,required: true  %>
      <small class="form-control-feedback text-danger person_name"></small>
    </div>
  </div>

  <div class="form-group  row">
    <%= form.label :institution_type_id, 'Tipo institucion (*)', class:'col-sm-4 col-md-2 col-form-label g-mb-10' %>
    <div class="col-sm-8 col-lg-6">
      <%= form.select(:institution_type_id, @institution_types.collect {|type| [type.name, type.id]}, { include_blank: true},
                      class: 'form-control select-institution-type', required: true) %>
      <small class="form-control-feedback text-danger institution_type"></small>
    </div>
  </div>

  <div class="form-group  row">
    <%= form.label :neighborhood_id, 'Barrio (*)', class:'col-sm-4 col-md-2 col-form-label g-mb-10' %>
    <div class="col-sm-8 col-lg-6">
      <%= form.select(:neighborhood_id, @neighborhoods.collect {|n| [n.name, n.id]}, { include_blank: true},
                      class: 'form-control select-neighborhood-institution', required: true) %>
      <small class="form-control-feedback text-danger neighborhood_id"></small>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :direction, 'Domicilio:', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :direction, class: "form-control u-form-control", placeholder: 'Domicilio particular'  %>
      <small class="form-control-feedback text-danger person_direction"></small>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-primary g-mr-10' %>
    <button type="button" class="btn u-btn-darkred" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>
