<%= form_with(model: @person, remote: true, multipart: true, class: 'g-brd-around g-brd-gray-light-v4 g-pa-10 g-mb-10', id: 'form-person') do |form| %>

  <div class="form-group row g-mb-10">
    <%= form.label :number, 'NÂº matrÃ­cula (*):', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :number, class: "form-control u-form-control",placeholder: 'Ingrese matrÃ­cula', required: true  %>
      <small class="form-control-feedback text-danger person_number"></small>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :last_name, 'Apellido (*):', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :last_name, class: "form-control u-form-control", placeholder: 'Ingrese apellido' ,required: true  %>
      <small class="form-control-feedback text-danger person_last_name"></small>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :name, 'Nombre (*):', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :name, class: "form-control u-form-control", placeholder: 'Ingrese nombre' ,required: true  %>
      <small class="form-control-feedback text-danger person_name"></small>
    </div>
  </div>

  <div class="form-group  row">
    <%= form.label :genre, 'Genero (*)', class:'col-sm-4 col-md-2 col-form-label g-mb-10' %>
    <div class="col-sm-8 col-lg-6">
      <%= form.select(:genre, @genres.collect {|genre| [genre[:value], genre[:id] ] }, 
                      { include_blank: 'Seleccione genero'},
                      class: 'form-control ', required: true) %>
      <small class="form-control-feedback text-danger "></small>
    </div>
  </div>

  <div class="form-group  row">
    <%= form.label :dni_type_id, 'Tipo DNI (*)', class:'col-sm-4 col-md-2 col-form-label g-mb-10' %>
    <div class="col-sm-8 col-lg-6">
      <%= form.select(:dni_type_id, @dni_types.collect {|type| [type.name, type.id]}, { include_blank: true},
                      class: 'form-control select-dni-type-person', required: true) %>
      <small class="form-control-feedback text-danger dni_type"></small>
    </div>
  </div>

  <div class="form-group  row">
    <%= form.label :neighborhood_id, 'Barrio (*)', class:'col-sm-4 col-md-2 col-form-label g-mb-10' %>
    <div class="col-sm-8 col-lg-6">
      <%= form.select(:neighborhood_id, @neighborhoods.collect {|n| [n.name, n.id]}, { include_blank: true},
                      class: 'form-control select-neighborhood-person', required: true) %>
      <small class="form-control-feedback text-danger neighborhood_id"></small>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :direction, 'Domicilio:', class: "col-sm-4 col-md-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-6 col-md-4">
      <%= form.text_field :direction, class: "form-control u-form-control", placeholder: 'Domicilio particular'  %>
      <small class="form-control-feedback text-danger person_direction"></small>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-primary g-mr-10' %>
    <button type="button" class="btn u-btn-darkred" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>
