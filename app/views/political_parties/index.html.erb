<h1>Partidos</h1>
<div class="row ml-2">
  <%= link_to "<i class='fa fa-plus'></i> Registrar partido".html_safe, new_political_party_path(), 
            remote: true, 
            class: 'btn u-btn-outline-primary u-btn-hover-v1-2 mb-2' %>
            
  <%= link_to "<i class='fa fa-users'></i> Cargos".html_safe, politician_rols_path(), 
        remote: true,
        class: 'btn u-btn-outline-pink u-btn-hover-v1-2 mb-2 ml-4' %>
</div>

<%= render( partial: 'shared/table', 
            locals: { table_id: 'political_parties', 
                      color: 'blue', 
                      icon: 'fa-users',
                      title: "Partidos politicos", 
                      col_names: [ 'Partido','Representantes', 'Descripcion', 'Acciones' ] }) %>

<!-- Modal para eliminar person -->
<div class="modal fade" id="modal-disable-person" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Â¿ Esta seguro de dar de baja este partido ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: disable_person_path, id: 'form-disable-person') do |form| %>
          <%= form.hidden_field :person_id %>
          <%= form.submit 'Eliminar', class: 'btn u-btn-red g-mr-10' %>
          <button type="button" data-dismiss="modal" class="btn u-btn-teal g-mr-10"> Cerrar </button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="politician_rols" role="dialog"
     aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
</div>