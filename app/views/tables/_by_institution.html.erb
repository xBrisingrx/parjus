<div class="modal-dialog modal-xl" role="document">
  <div class="modal-content">
    <div class="modal-header g-brd-blue g-bg-blue">
      <h5 class="modal-title text-white"><strong><%= @title_modal%></strong></h5>
      <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="card g-brd-blue rounded g-mb-30">
			  <h3 class="card-header g-bg-blue g-brd-transparent g-color-white g-font-size-16 mb-2 rounded-0">
			    Mesas
			  </h3>
			   <div class="px-2  pb-2">
			    <table class="table table-sm table-hover dt-responsive w-100 u-table--v1" data-show='show'>
			      <thead>
			        <tr>
			          <th>Mesa</th>
			          <th>Cerrada</th>
			        </tr>
			      </thead>

			      <tbody>
			        <% tables.each do |table|%>
			        	<tr>
			        		<td> <%= table.name %> </td>
			        		<td> <%= (table.closed) ? 'Si' : 'No' %></td>
			        	</tr>
			        <% end %>
			      </tbody>
			    </table>
			  </div>
			</div>
    </div>
  </div>
</div>




